{
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add --force"
    ]
  },
  "dependencies": {
    "@stencila/encoda": "0.99.5",
    "aws-sdk": "2.739.0",
    "mongodb": "3.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/mongodb": "3.5.25",
    "@types/node": "^14.0.23",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "dotenv": "8.2.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "lint-staged": "^10.2.11",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.3",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./build/index.js",
    "start:dev": "ts-node-dev --project tsconfig.dev.json --transpile-only --no-notify src/index.ts",
    "lint": "concurrently --names \"TypeScript,ESLint\" \"tsc --project tsconfig.dev.json\" \"eslint . --ext .js,.ts --cache --cache-location .eslint/ --color\"",
    "lint:fix": "eslint . --ext .js,.ts --cache --cache-location .eslint/ --color --fix",
    "test": "jest --colors"
  }
}
